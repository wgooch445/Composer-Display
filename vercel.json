{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/",          
      "dest": "/public/index.html" 
    },
    {
      "src": "/(.*)",     
      "dest": "/public/$1"
    }
  ]
}

